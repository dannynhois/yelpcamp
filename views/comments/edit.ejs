<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit comment</h1>
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment.id %>?_method=PUT" method="POST">
            <div style="margin: 25px auto; width: 30%;">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit">
                </div>
            </div>
            
        </form>
    </div>
</div>


<% include ../partials/footer %>